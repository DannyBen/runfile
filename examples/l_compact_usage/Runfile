# If you wish to avoid a long list of usage patterns, you can 
# easily combine them.
# define your combined usage first, and for subsequent actions,
# set usage to false.

usage "(wakeup|code|sleep)"
action :wakeup do
  puts "wakeup"
end

usage false
action :code do
  puts "code"
end

usage false
action :sleep do
  puts "sleep"
end

# this works exactly the same for a namespaced command 
# (and even for named.runfiles...)

command "weekend"

usage "(wakeup|play|sleep)"
action :wakeup do
  puts "wakeup early"
end

usage false
action :play do
  puts "play"
end

usage false
action :sleep do 
  puts "sleep late"
end

