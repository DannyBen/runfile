# this examples shows how to use a filename that is not named
# 'Runfile'. any file with a '.runfile' extension can be used.

usage "hello [<name>]"
action :hello do |args|
	say "hello #{args['<name>']}"
end

command "spanish"

usage "hello [<name>]"
action :hello do |args|
	say "hola #{args['<name>']}"
end

command "french"

usage "hello [<name>]"
action :hello do |args|
	say "bonjour #{args['<name>']}"
end

command

action :bye do
	say "bye"
end
