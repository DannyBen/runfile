# this is a globel action
action :greet do
  puts "Hello"
end

# define a "super command" (namespace).
# any action below it will be preceded by "make" automatically.
command "make"

# the usage string will actually be "make custard" and the action
# will be stored as ":make_custard".
usage  "custard"
action :custard do
  puts "Making custard..." 
end

usage  "jam"
action :jam do
  puts "Making jam..." 
end

usage  "meat [--mix]"
option "--mix", "Mix all the ingredients. Good."
action :meat do |args|
  puts "Making meat..." 
  puts "...and mixing it all up" if args['--mix']
end

# return back to global namespace
command

action :eat do
  puts "Custard? Good! Jam? Good! Meat? Good!!!"
end
